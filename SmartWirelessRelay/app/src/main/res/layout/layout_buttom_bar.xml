<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_buton_bar_height"
    android:gravity="center_vertical"
    android:background="@color/white"
    android:weightSum="4"
    android:baselineAligned="false"
    android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/layout_home_page"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"

            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageview_home_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/checkthehome" />
            <TextView
                android:id="@+id/textview_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="首页"
                android:textColor="@color/line_clolor"
                android:textSize="@dimen/layout_buton_bar_item_text_size" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_devices"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageview_devices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/checkthedevice" />

            <TextView
                android:id="@+id/textview_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="设备"
                android:textColor="@color/line_clolor"
                android:textSize="@dimen/layout_buton_bar_item_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_rooms"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageview_rooms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/checktheroom" />

            <TextView
                android:id="@+id/textview_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="房间"
                android:textColor="@color/line_clolor"
                android:textSize="@dimen/layout_buton_bar_item_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_personal_center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageview_personal_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/checkthemine" />
            <TextView
                android:id="@+id/textview_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="我的"
                android:textColor="@color/line_clolor"
                android:textSize="@dimen/layout_buton_bar_item_text_size" />
    </LinearLayout>
</LinearLayout>