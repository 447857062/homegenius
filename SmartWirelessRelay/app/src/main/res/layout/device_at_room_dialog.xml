<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">
    <View
        android:id="@+id/view_device_menu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_item_content_height" />
    <ImageView
        android:id="@+id/imageview_angle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_device_menu"
        android:layout_marginLeft="24dp"
        android:scaleType="centerInside"
        android:src="@drawable/smalltriangle" />
        <ListView
            android:layout_below="@+id/imageview_angle"
            android:layout_marginLeft="15dp"
            android:background="@color/transparent"
            android:id="@+id/listview_room_types"
            android:listSelector="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"/>

</RelativeLayout>