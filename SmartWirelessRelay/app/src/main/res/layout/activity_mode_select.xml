<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:titlelayout="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.deplink.boruSmart.activity.device.router.wifi.ModeSelectActivity">

    <com.deplink.boruSmart.view.combinationwidget.TitleLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        titlelayout:edit_text_show="true"
        titlelayout:return_image_show="true"
        titlelayout:menu_image_show="false"
        titlelayout:title_text="模式"
        titlelayout:edit_text="保存"
        android:layout_height="@dimen/title_bar_height"
        />
    <com.deplink.boruSmart.view.scrollview.MyScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/layout_title"
        android:background="@color/page_background"
        android:scrollbars="none"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--AC-->
            <RelativeLayout
                android:id="@+id/layout_model_AC"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_item_content_height"
                android:layout_marginTop="@dimen/layout_room_content_margin_top"
                android:background="@color/white"
                android:clickable="true"
                android:paddingLeft="@dimen/layout_content_margin_left_right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="802.11b/g"
                    android:textColor="@color/room_type_text"
                    android:textSize="@dimen/text_size_small" />

                <ImageView
                    android:id="@+id/imageview_model_ac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/layout_content_margin_left_right"
                    android:src="@drawable/checkbox_style_imagelevel" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/line_dirver_color" />

            </RelativeLayout>

            <!--N-->
            <RelativeLayout

                android:id="@+id/layout_model_N"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_item_content_height"
                android:layout_below="@+id/layout_model_AC"
                android:layout_marginTop="@dimen/list_item_textview_margin_top"
                android:background="@color/white"
                android:clickable="true"
                android:paddingLeft="@dimen/layout_content_margin_left_right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="802.11b"
                    android:textColor="@color/room_type_text"
                    android:textSize="@dimen/text_size_small" />

                <ImageView
                    android:id="@+id/imageview_model_n"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/layout_content_margin_left_right"
                    android:src="@drawable/checkbox_style_imagelevel" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/line_dirver_color" />

            </RelativeLayout>

            <!--4-->
            <RelativeLayout

                android:id="@+id/layout_model_4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_item_content_height"
                android:layout_below="@+id/layout_model_N"
                android:background="@color/white"
                android:clickable="true"
                android:paddingLeft="@dimen/layout_content_margin_left_right"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="802.11g"
                    android:textColor="@color/room_type_text"
                    android:textSize="@dimen/text_size_small" />

                <ImageView
                    android:id="@+id/imageview_model_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/layout_content_margin_left_right"
                    android:src="@drawable/checkbox_style_imagelevel" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/line_dirver_color" />

            </RelativeLayout>

            <!--7-->
            <RelativeLayout

                android:id="@+id/layout_model_7"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_item_content_height"
                android:layout_below="@+id/layout_model_4"
                android:background="@color/white"
                android:clickable="true"
                android:paddingLeft="@dimen/layout_content_margin_left_right"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="802.11g/n"
                    android:textColor="@color/room_type_text"
                    android:textSize="@dimen/text_size_small" />

                <ImageView
                    android:id="@+id/imageview_model_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/layout_content_margin_left_right"
                    android:src="@drawable/checkbox_style_imagelevel" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/line_dirver_color" />

            </RelativeLayout>
            <!--9-->
            <RelativeLayout

                android:id="@+id/layout_model_9"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_item_content_height"
                android:layout_below="@+id/layout_model_7"
                android:background="@color/white"
                android:clickable="true"
                android:paddingLeft="@dimen/layout_content_margin_left_right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="802.11b/g/n"
                    android:textColor="@color/room_type_text"
                    android:textSize="@dimen/text_size_small" />

                <ImageView
                    android:id="@+id/imageview_model_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/layout_content_margin_left_right"
                    android:src="@drawable/checkbox_style_imagelevel" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/line_dirver_color" />
            </RelativeLayout>
        </RelativeLayout>
    </com.deplink.boruSmart.view.scrollview.MyScrollView>

</RelativeLayout>

