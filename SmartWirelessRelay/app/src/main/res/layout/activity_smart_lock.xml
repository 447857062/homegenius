<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:titlelayout="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/doorbackground"
    tools:context="com.deplink.boruSmart.activity.device.smartlock.SmartLockActivity">
    <com.deplink.boruSmart.view.combinationwidget.TitleLayout
        android:id="@+id/layout_title"
        android:paddingLeft="8dp"
        android:layout_width="match_parent"
        titlelayout:edit_text_show="true"
        titlelayout:return_image_show="true"
        titlelayout:menu_image_show="false"
        android:background="@color/transparent"
        titlelayout:title_text="智能门锁"
        titlelayout:edit_text="编辑"
        android:layout_height="@dimen/title_bar_height"
        />
    <RelativeLayout
        android:id="@+id/layout_open_door"
        android:layout_width="120dp"
        android:layout_marginLeft="95dp"
        android:paddingTop="35dp"
        android:layout_gravity="center_vertical"
        android:layout_height="120dp">
        <ImageView
            android:id="@+id/gif_alert"
            android:src="@drawable/doorbackgroundgif"
            android:paddingTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@drawable/opendoor"
            android:layout_toRightOf="@+id/gif_alert"
            android:layout_marginLeft="19dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:layout_gravity="bottom|center_horizontal"
        android:background="@drawable/unlock_button"
        android:id="@+id/imageview_unlock"
        android:layout_marginBottom="50dp"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:gravity="center_vertical|center_horizontal"
        android:text="高级功能"
        android:layout_width="120dp"
        android:layout_height="30dp"
        />
</FrameLayout>
