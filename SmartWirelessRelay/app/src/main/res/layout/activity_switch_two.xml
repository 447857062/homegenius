<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:titlelayout="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.deplink.boruSmart.activity.device.smartSwitch.SwitchTwoActivity">

    <com.deplink.boruSmart.view.combinationwidget.TitleLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        titlelayout:edit_text_show="true"
        titlelayout:return_image_show="true"
        titlelayout:menu_image_show="false"
        titlelayout:title_text="二路开关"
        titlelayout:edit_text="编辑"
        android:layout_height="@dimen/title_bar_height"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_title"
        android:background="@color/page_background">

        <FrameLayout
            android:layout_marginTop="@dimen/smart_switch_mainpage_center_image_margintop"
            android:layout_centerHorizontal="true"
            android:background="@drawable/roadswitchoff"
            android:layout_width="@dimen/smart_switch_mainpage_center_image_width_height"
            android:layout_height="@dimen/smart_switch_mainpage_center_image_width_height">

            <Button
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:id="@+id/button_switch_left"
                android:layout_gravity="left|center_vertical" />

            <Button
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:id="@+id/button_switch_right"
                android:layout_gravity="right|center_vertical" />
        </FrameLayout>
        <Button
            android:id="@+id/button_all_switch"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="57dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>
