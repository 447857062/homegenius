<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:titlelayout="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background"
    tools:context="com.deplink.homegenius.activity.personal.HomeNetWorkActivity">
    <com.deplink.homegenius.view.combinationwidget.TitleLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        titlelayout:edit_text_show="false"
        titlelayout:return_image_show="true"
        titlelayout:menu_image_show="false"
        titlelayout:title_text="家庭网络"
        android:layout_height="@dimen/title_bar_height"
        />
    <!--网关检查结果是一个网关设备系列表-->
    <com.deplink.homegenius.view.scrollview.MyScrollView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/layout_title"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/page_background">
            <com.deplink.homegenius.view.scrollview.NonScrollableListView
                android:id="@+id/listview_getway_devices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"
                android:listSelector="@color/transparent"/>

            <TextView
                android:id="@+id/textview_no_getway"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center_horizontal"
                android:text="家庭网络中未添加设备"
                android:textColor="@color/room_type_text"
                android:textSize="@dimen/text_size_small"
                android:visibility="gone" />

        </FrameLayout>
    </com.deplink.homegenius.view.scrollview.MyScrollView>


</RelativeLayout>
