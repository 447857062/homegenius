<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_item_content_height"
    android:minHeight="@dimen/layout_item_content_height"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:paddingLeft="@dimen/layout_content_margin_left_right"
        android:id="@+id/layout_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|left"
        >
        <ImageView
            android:id="@+id/iamge_item"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wifi_signal_strength"
            android:layout_alignParentLeft="true"
           />
        <LinearLayout
            android:layout_toLeftOf="@+id/iamge_item_jiami"
            android:layout_toRightOf="@+id/iamge_item"
            android:layout_marginLeft="@dimen/arror_right_left_textview_margin_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/list_text_show_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="left"

                android:text="linkWord"
                android:textColor="@color/room_type_text"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/encryption_type"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="left"
                android:textColor="@color/room_type_text"
                android:textSize="@dimen/text_size_smallest"
                />
        </LinearLayout>

        <ImageView
            android:layout_marginRight="@dimen/layout_content_margin_left_right"
            android:id="@+id/iamge_item_jiami"
            android:alpha="1"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="5dp"
        android:background="@color/line_dirver_color" />
</LinearLayout>