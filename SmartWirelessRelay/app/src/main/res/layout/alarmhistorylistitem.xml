<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/layout_content_margin_left_right"
    android:paddingRight="@dimen/layout_content_margin_left_right"
    android:minHeight="@dimen/doorlock_alerthistory_itemheight"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_toLeftOf="@+id/layout_time"
        android:layout_height="match_parent"
        android:layout_centerVertical="true">

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/textview_smart_lock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/room_type_text"
            android:textSize="@dimen/text_size_small"
            android:layout_alignParentLeft="true"
            android:text="智能门锁被" />

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/textview_userid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small"
            android:layout_toRightOf="@+id/textview_smart_lock"
            android:text=""
            android:textColor="@color/title_blue_bg" />

        <TextView
            android:layout_centerVertical="true"
            android:textColor="@color/room_type_text"
            android:textSize="@dimen/text_size_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textview_userid"
            android:text="异常打开" />
    </RelativeLayout>

    <LinearLayout

        android:id="@+id/layout_time"
        android:layout_width="100dp"
        android:layout_centerVertical="true"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_data_hour_minute_second"
            android:layout_width="match_parent"
            android:gravity="right|top"
            android:textColor="@color/room_type_text"
            android:textSize="@dimen/text_size_small"
            android:layout_height="wrap_content"
             />

        <TextView
            android:id="@+id/textview_data_year_mouth_day"
            android:gravity="right"
            android:textColor="@color/huise"
            android:textSize="@dimen/text_size_smallest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             />
    </LinearLayout>

    <View
        android:layout_alignParentBottom="true"
        android:background="@color/seekbar_horiz"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</RelativeLayout>