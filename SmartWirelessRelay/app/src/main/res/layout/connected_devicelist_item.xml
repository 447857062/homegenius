<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="@dimen/router_device_connect_devices_list_item_height">

    <RelativeLayout
        android:id="@+id/layout_device_name"
        android:layout_width="@dimen/router_connectdevice_list_item_name_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_content_margin_left_right">

        <TextView
            android:id="@+id/textview_device_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text="iPhone6s"
            android:textColor="@color/room_type_text"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/textview_device_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textview_device_name"
            android:layout_marginTop="@dimen/router_connectdevice_list_item_textview_margin_top"
            android:text="--"
            android:textColor="@color/huise"
            android:textSize="@dimen/layout_buton_bar_item_text_size" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_upload_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/layout_device_name">

        <ImageView
            android:id="@+id/imageview_upload_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/uploadspeed" />

        <TextView
            android:id="@+id/textview_downloadspeed"
            android:layout_width="@dimen/router_connectdevice_list_item_speedvalue_width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/router_connectdevice_list_item_textview_margin_right"
            android:layout_toRightOf="@+id/imageview_upload_speed"
            android:text="3 mb/s"
            android:textColor="@color/room_type_text"
            android:textSize="@dimen/text_size_smallest" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_download_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/layout_upload_speed">

        <ImageView
            android:id="@+id/imageview_download_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/downloadspeed" />

        <TextView
            android:id="@+id/textview_uploadspeed"
            android:layout_width="@dimen/router_connectdevice_list_item_speedvalue_width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/router_connectdevice_list_item_textview_margin_right"
            android:layout_toRightOf="@+id/imageview_download_speed"
            android:text="3 mb/s"
            android:textColor="@color/room_type_text"
            android:textSize="@dimen/text_size_smallest" />
    </RelativeLayout>


    <View
        android:layout_marginLeft="@dimen/layout_content_margin_left_right"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/line_clolor" />
</RelativeLayout>