<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:titlelayout="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.deplink.homegenius.activity.device.smartSwitch.SwitchThreeActivity">

    <com.deplink.homegenius.view.combinationwidget.TitleLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        titlelayout:edit_text_show="true"
        titlelayout:return_image_show="true"
        titlelayout:menu_image_show="false"
        titlelayout:title_text="三路开关"
        titlelayout:edit_text="编辑"
        android:layout_height="@dimen/title_bar_height"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_title"
        android:background="@color/page_background">

        <RelativeLayout
            android:layout_width="@dimen/smart_switch_mainpage_center_image_width_height"
            android:layout_height="@dimen/smart_switch_mainpage_center_image_width_height"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/smart_switch_mainpage_center_image_margintop"
            android:background="@drawable/threewayswitchoff">

            <Button
                android:id="@+id/button_switch_left"
                android:layout_width="82dp"
                android:layout_height="240dp"
                android:layout_alignParentLeft="true"
                 />

            <Button
                android:id="@+id/button_switch_middle"
                android:layout_width="82dp"
                android:layout_height="240dp"
                android:layout_centerHorizontal="true"
               />

            <Button
                android:id="@+id/button_switch_right"
                android:layout_width="82dp"
                android:layout_height="240dp"
                android:layout_alignParentRight="true"
               />
        </RelativeLayout>

    </RelativeLayout>
    <Button
        android:id="@+id/button_all_switch"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="57dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
