<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:titlelayout="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background"
    tools:context="com.deplink.homegenius.activity.personal.softupdate.UpdateImmediateActivity">

    <com.deplink.homegenius.view.combinationwidget.TitleLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        titlelayout:edit_text_show="false"
        titlelayout:return_image_show="true"
        titlelayout:menu_image_show="false"
        titlelayout:title_text="软件升级"
        android:layout_height="@dimen/title_bar_height"
        />

    <RelativeLayout
        android:id="@+id/layout_versioninfo"
        android:layout_width="match_parent"
        android:background="@drawable/radius4_white_background"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_title"
        android:layout_marginLeft="15dp"
        android:paddingTop="15dp"
        android:layout_marginRight="15dp"
        android:paddingLeft="15dp"
        android:paddingBottom="15dp"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/textview_version_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1.升级版本 2.2.10"
            android:textColor="@color/room_type_text"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:layout_below="@+id/textview_version_code"
            android:id="@+id/textview_file_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="--"
            android:textColor="@color/room_type_text"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/version_explan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_file_size"
            android:layout_marginTop="15dp"
            android:text="--"
            android:textColor="@color/room_type_text"
            android:textSize="@dimen/text_size_small" />
    </RelativeLayout>


    <Button
        android:id="@+id/button_update"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_item_content_height"
        android:layout_below="@+id/layout_versioninfo"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/input_layout_marginleft_right"
        android:layout_marginRight="@dimen/input_layout_marginleft_right"
        android:layout_marginTop="@dimen/wifirelay_reload_wifilist_button_margintop"
        android:background="@drawable/login_button_enable_background"
        android:gravity="center_horizontal|center_vertical"
        android:text="升级"
        android:textColor="@color/white" />
</RelativeLayout>
