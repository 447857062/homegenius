<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:minHeight="75dp"
    android:background="@drawable/button_delete_background"
  >
    <com.deplink.homegenius.view.imageview.CircleImageView
        android:layout_marginLeft="@dimen/layout_content_margin_left_right"
        android:id="@+id/user_portrait"
        android:layout_width="45dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_height="45dp" />
    <TextView
        android:layout_toRightOf="@+id/user_portrait"
        android:id="@+id/user_name"
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/room_type_text"
        android:layout_marginLeft="15dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <FrameLayout
        android:layout_marginRight="@dimen/layout_content_margin_left_right"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/layout_mamager"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/textview_manager"
                android:src="@drawable/administratoricon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="管理员"
                android:layout_centerVertical="true"
                android:id="@+id/textview_manager"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/room_type_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
      <TextView
          android:id="@+id/textview_share_user_bind_state"
          android:text="已绑定"
          android:background="@drawable/radius10_bg_blue_layout_background"
          android:layout_gravity="right|center_vertical"
          android:textSize="@dimen/text_size_small"
          android:textColor="@color/white"
          android:gravity="center_horizontal"
          android:layout_width="60dp"
          android:layout_height="20dp" />
    </FrameLayout>
</RelativeLayout>