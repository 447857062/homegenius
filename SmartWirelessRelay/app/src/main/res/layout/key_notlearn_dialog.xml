<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/radius8_bg_white_layout_background"
    android:minHeight="130dp">

    <TextView
        android:id="@+id/textview_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/doorlock_clear_record_dialog_title_margintop"
        android:gravity="center_horizontal|center_vertical"
        android:text="温馨提示"
        android:textColor="@color/huise"
        android:textSize="@dimen/layout_top_bar_item_text_size" />

    <TextView
        android:id="@+id/textview_makesure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_title"
        android:layout_marginTop="@dimen/doorlock_clear_record_dialog_title_margintop"
        android:gravity="center_horizontal|center_vertical"
        android:text="该按键尚未学习"

        android:textColor="@color/room_type_text"
        android:textSize="@dimen/text_size_small" />

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/textview_makesure"
        android:layout_marginTop="@dimen/doorlock_clear_record_dialog_title_margintop"
        android:background="@color/huise" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/doorlock_clear_record_dialog_makesure_button_height"
        android:layout_below="@+id/view_line">


        <TextView
            android:id="@+id/textview_center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:text="确定"
            android:textColor="@color/title_blue_bg"
            android:textSize="@dimen/delete_textview_size" />
    </RelativeLayout>
</RelativeLayout>