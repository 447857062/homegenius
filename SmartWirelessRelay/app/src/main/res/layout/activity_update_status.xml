<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:titlelayout="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.deplink.homegenius.activity.device.router.firmwareupdate.UpdateStatusActivity">
    <com.deplink.homegenius.view.combinationwidget.TitleLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        titlelayout:edit_text_show="false"
        titlelayout:return_image_show="true"
        titlelayout:menu_image_show="false"
        titlelayout:title_text="固件升级"
        android:layout_height="@dimen/title_bar_height"
        />

    <ImageView
        android:layout_below="@+id/layout_title"
        android:id="@+id/image_show_logo"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/set_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_below="@+id/image_show_logo"
        android:id="@+id/textview_updateing"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/room_type_text"
        android:textSize="15dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button_sure"
        android:visibility="gone"
        android:text="确定"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textview_updateing"
        android:layout_marginTop="200dp"
        android:background="@drawable/firmware_upgrade_sure_button"
        android:layout_width="131dp"
        android:layout_height="36dp" />
</RelativeLayout>
