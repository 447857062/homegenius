<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/experience_center_listitem_height"
    android:paddingLeft="@dimen/layout_content_margin_left_right"
    android:background="@color/white"
    android:minHeight="@dimen/experience_center_listitem_height"
    >
    <ImageView
        android:id="@+id/imageview_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/switchalltheway" />

    <TextView
        android:id="@+id/textview_band_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/smart_switch_name_marginleft_typeImage"
        android:layout_toRightOf="@+id/imageview_type"
        android:textColor="@color/room_type_text"
        android:textSize="@dimen/text_size_small" />

    <ImageView
        android:layout_marginRight="@dimen/layout_content_margin_left_right"
        android:id="@+id/iamgeview_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/gotoicon" />

    <View
        android:background="@color/seekbar_horiz"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true" />
</RelativeLayout>