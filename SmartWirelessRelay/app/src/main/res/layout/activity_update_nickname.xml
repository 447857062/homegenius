<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:titlelayout="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.deplink.homegenius.activity.personal.usrinfo.UpdateNicknameActivity">
    <com.deplink.homegenius.view.combinationwidget.TitleLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        titlelayout:edit_text_show="true"
        titlelayout:return_image_show="true"
        titlelayout:menu_image_show="false"
        titlelayout:title_text="修改昵称"
        titlelayout:edit_text="完成"
        android:layout_height="@dimen/title_bar_height"
        />
    <RelativeLayout
        android:layout_below="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.deplink.homegenius.view.edittext.ClearEditText
            android:layout_marginTop="15dp"
            android:id="@+id/edittext_update_nickname"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/room_type_text"
            android:singleLine="true"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_item_content_height" />
    </RelativeLayout>
</RelativeLayout>
