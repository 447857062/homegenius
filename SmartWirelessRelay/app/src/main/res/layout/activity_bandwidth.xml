<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:titlelayout="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background"
    tools:context="com.deplink.homegenius.activity.device.router.wifi.BandwidthActivity">
    <com.deplink.homegenius.view.combinationwidget.TitleLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        titlelayout:edit_text_show="true"
        titlelayout:return_image_show="true"
        titlelayout:menu_image_show="false"
        titlelayout:title_text="频宽"
        titlelayout:edit_text="保存"
        android:layout_height="@dimen/title_bar_height"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_title"
        android:background="@color/page_background">

        <RelativeLayout
            android:id="@+id/layout_bandwidth_20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_item_content_height"
            android:layout_marginTop="@dimen/layout_room_content_margin_top"
            android:background="@color/white"
            android:clickable="true"
            android:paddingLeft="@dimen/layout_content_margin_left_right">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textview_current_wifi_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="20M模式"
                    android:textColor="@color/room_type_text"
                    android:textSize="@dimen/text_size_small" />

                <ImageView
                    android:id="@+id/imageview_bandwidth_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/layout_content_margin_left_right"
                    android:src="@drawable/checkbox_style_imagelevel" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/line_dirver_color" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_bandwidth_40"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_item_content_height"
            android:layout_below="@+id/layout_bandwidth_20"
            android:background="@color/white"
            android:clickable="true"
            android:paddingLeft="@dimen/layout_content_margin_left_right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="40M模式"
                android:textColor="@color/room_type_text"
                android:textSize="@dimen/text_size_small" />

            <ImageView
                android:id="@+id/imageview_bandwidth_40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/layout_content_margin_left_right"
                android:src="@drawable/checkbox_style_imagelevel" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
