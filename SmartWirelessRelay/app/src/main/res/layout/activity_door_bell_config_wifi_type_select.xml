<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:titlelayout="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.deplink.boruSmart.activity.device.doorbell.add.DoorBellConfigWifiTypeSelect">
    <com.deplink.boruSmart.view.combinationwidget.TitleLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        titlelayout:edit_text_show="false"
        titlelayout:return_image_show="true"
        titlelayout:menu_image_show="false"
        titlelayout:title_text="配网设置选择"
        android:layout_height="@dimen/title_bar_height"
        />
    <FrameLayout
        android:id="@+id/frame_doorbell_lookslike"
        android:layout_below="@+id/layout_title"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageview_instrution"
            android:layout_gravity="right|top"
            android:src="@drawable/instructions_for_use"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginRight="31dp"
            android:src="@drawable/doorbell_combination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>
    <ImageView
        android:layout_below="@+id/frame_doorbell_lookslike"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_doorbell_configwifi_card"
        android:id="@+id/imageview_doorbell_configwifi"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_below="@+id/imageview_doorbell_configwifi"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_doorbell_add_configedwifi"
        android:id="@+id/imageview_doorbell_add_configedwifi"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
